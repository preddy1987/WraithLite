<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WraithLite.LoginModalPage"
             BackgroundColor="Black"
             Padding="30">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" TextColor="Orange" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" FontSize="16" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" FontSize="16" />

        <Button Text="Login" Clicked="OnLoginClicked"
                BackgroundColor="Orange" TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>
