<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WraithLite.ViewModels"
             x:Class="WraithLite.MainPage"
             x:DataType="vm:MainViewModel">

    <VerticalStackLayout Padding="10" Spacing="10">
        <!-- Existing Connect button -->
        <Button x:Name="ConnectButton"
          Text="Connect"
          Clicked="OnConnectClicked" />

        <!-- NEW: Lich button -->
        <Button x:Name="LichButton"
          Text="Lich"
          Clicked="OnLichClicked" />

        <!-- Credentials entries (if not already present) -->
        <Entry x:Name="UsernameEntry"
         Placeholder="Username" />
        <Entry x:Name="PasswordEntry"
         Placeholder="Password"
         IsPassword="True" />

        <!-- Game UI -->
        <Editor x:Name="GameOutput"
          IsReadOnly="True"
          AutoSize="TextChanges" />
        <Entry x:Name="CommandEntry"
         Placeholder="Enter command..."
         Completed="OnCommandEntered" />
    </VerticalStackLayout>

</ContentPage>
